<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="config.factory.class">\Alfred\Core\Infrastructure\Configuration\ConfigFactory</parameter>
    </parameters>

    <services>

        <service id="config.factory" class="%config.factory.class%">

        </service>

        <service id="config" class="%config.class%">
            <factory service="config.factory" method="create"/>
            <argument type="string">%config-file%</argument>
        </service>
    </services>
</container>
